#include <stdio.h>
#include <stdlib.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <unistd.h>
#include <string.h>

#define SHM_SIZE 1024

int main()
{
    key_t key = ftok("shmfile", 65);
    int shmid = shmget(key, SHM_SIZE, 0666 | IPC_CREAT);
    char *str = (char *)shmat(shmid, (void *)0, 0);

    for (int i = 0; i < 5; i++)
    {
        while (strlen(str) != 0);
        sprintf(str, "Message %d from P1", i);
        sleep(1);
    }

    while (strlen(str) != 0);
    sprintf(str, "exit");

    shmdt(str);
    return 0;
}

